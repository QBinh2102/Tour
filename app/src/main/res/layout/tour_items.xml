<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewHinhTourItem"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textViewTenTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Tên tour"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPhuongTien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="Phương tiện: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textViewNgayKhoiHanh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="Ngày Khởi Hành: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textViewGiaTour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="Giá: "
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewSao1TourItem"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            tools:srcCompat="@drawable/star_border_24" />

                        <ImageView
                            android:id="@+id/imageViewSao2TourItem"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            tools:srcCompat="@drawable/star_border_24" />

                        <ImageView
                            android:id="@+id/imageViewSao3TourItem"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            tools:srcCompat="@drawable/star_border_24" />

                        <ImageView
                            android:id="@+id/imageViewSao4TourItem"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            tools:srcCompat="@drawable/star_border_24" />

                        <ImageView
                            android:id="@+id/imageViewSao5TourItem"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            tools:srcCompat="@drawable/star_border_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewSoBinhLuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 bình luận"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>