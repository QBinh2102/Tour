<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewHinhTour"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewTenTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tour"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPhuongTien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phương tiện: "
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textViewNgayKhoiHanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày Khởi Hành: "
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textViewGiaTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá: "
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSoSao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/5 sao"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textViewSoBinhLuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 bình luận"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>