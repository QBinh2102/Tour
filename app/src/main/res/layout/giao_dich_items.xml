<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewTourGiaoDich"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTenTourGiaoDich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="2dp">

                            <ImageView
                                android:id="@+id/imageViewSao1GDItems"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                tools:srcCompat="@drawable/star_border_24" />

                            <ImageView
                                android:id="@+id/imageViewSao2GDItems"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                tools:srcCompat="@drawable/star_border_24" />

                            <ImageView
                                android:id="@+id/imageViewSao3GDItems"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                tools:srcCompat="@drawable/star_border_24" />

                            <ImageView
                                android:id="@+id/imageViewSao4GDItems"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                tools:srcCompat="@drawable/star_border_24" />

                            <ImageView
                                android:id="@+id/imageViewSao5GDItems"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                tools:srcCompat="@drawable/star_border_24" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewSoBinhLuanGDItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewSoLuongVeGDItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số lượng vé: "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textViewTongTienGDItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền: "
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewTrangThaiGDItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="Trạng thái: "
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>