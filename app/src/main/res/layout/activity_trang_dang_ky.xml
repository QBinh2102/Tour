<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangDangKy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/thanhTienTrinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:indeterminateTint="#00BFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/btQuayLaiTuDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#03A9F4"
            android:drawableLeft="@drawable/baseline_keyboard_return_24"
            android:text="Quay Lại"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/person_24" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:alpha="0.9"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:text="ĐĂNG KÝ TÀI KHOẢN"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Đăng Nhập"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextUserNameDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:drawableLeft="@drawable/person_24"
                        android:ems="10"
                        android:hint="Tên Đăng Nhập"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Mật Khẩu"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextPasswordDangKy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/lock_24"
                            android:ems="10"
                            android:hint="Mật khẩu"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <ImageButton
                            android:id="@+id/imgBtAnHienPassDangKy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.9"
                            android:backgroundTint="#FFFFFF"
                            app:srcCompat="@drawable/visibility_off_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Xác Nhận Mật Khẩu"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextPasswordXacThucDangKy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/lock_24"
                            android:ems="10"
                            android:hint="Xác nhận mật khẩu"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <ImageButton
                            android:id="@+id/imgBtAnHienXacThucPassDangKy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.9"
                            android:backgroundTint="#FFFFFF"
                            app:srcCompat="@drawable/visibility_off_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Thành Phố"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextDiaChiDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:drawableLeft="@drawable/location_on_24"
                        android:ems="10"
                        android:hint="Địa Chỉ"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Số Điện Thoại"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextPhoneDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:drawableLeft="@drawable/local_phone_24"
                        android:ems="10"
                        android:hint="Số điện thoại"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Email"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextEmailAddressDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:ems="10"
                        android:hint="Địa chỉ mail"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA" />

                    <Button
                        android:id="@+id/btDangKyTuDangKy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#03A9F4"
                        android:text="Đăng ký"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>