<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trang.TrangDangKy">

    <!-- Chỉ có một phần tử con trực tiếp duy nhất trong ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RelativeLayout chứa các phần tử trong layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome"
            android:orientation="vertical">

            <!-- Nút Quay lại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btQuayLaiTuDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#03A9F4"
                    android:drawableLeft="@drawable/baseline_keyboard_return_24"
                    android:text="Quay Lại"
                    android:textColor="@color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0.9"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="ĐĂNG KÝ TÀI KHOẢN"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Tên Người Dùng"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editTextUserNameDangKy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:drawableLeft="@drawable/person_24"
                            android:ems="10"
                            android:hint="Tên Người Dùng"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Mật Khẩu"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextPasswordDangKy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/lock_24"
                                android:ems="10"
                                android:hint="Mật khẩu"
                                android:inputType="textPassword"
                                android:minHeight="48dp"
                                android:textColor="@color/black"
                                android:textColorHint="#96A0AA" />

                            <ImageButton
                                android:id="@+id/imgBtAnHienPassDangKy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:backgroundTint="#FFFFFF"
                                android:minHeight="48dp"
                                app:srcCompat="@drawable/visibility_off_24" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Xác Nhận Mật Khẩu"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextPasswordXacThucDangKy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/lock_24"
                                android:ems="10"
                                android:hint="Xác nhận mật khẩu"
                                android:inputType="textPassword"
                                android:minHeight="48dp"
                                android:textColor="@color/black"
                                android:textColorHint="#96A0AA" />

                            <ImageButton
                                android:id="@+id/imgBtAnHienXacThucPassDangKy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:backgroundTint="#FFFFFF"
                                android:minHeight="48dp"
                                app:srcCompat="@drawable/visibility_off_24" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Địa Chỉ"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editTextDiaChiDangKy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:drawableLeft="@drawable/location_on_24"
                            android:ems="10"
                            android:hint="Địa Chỉ"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Số Điện Thoại"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editTextPhoneDangKy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:drawableLeft="@drawable/local_phone_24"
                            android:ems="10"
                            android:hint="Số điện thoại"
                            android:inputType="phone"
                            android:minHeight="48dp"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Email"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editTextEmailAddressDangKy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:drawableLeft="@drawable/baseline_email_24"
                            android:ems="10"
                            android:hint="Địa chỉ mail"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <TextView
                            android:id="@+id/textView38"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Ngày sinh"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/editTextNgaySinhDangKy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:drawableLeft="@drawable/create_24"
                            android:ems="10"
                            android:hint="Nhập ngày sinh (dd/mm/yyyy)"
                            android:inputType="date"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Giới tính"
                            android:textColor="@color/black" />

                        <RadioGroup
                            android:id="@+id/radioGroupGT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioNu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="Nữ"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/radioNam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="10dp"
                                android:text="Nam"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </RadioGroup>


                        <Button
                            android:id="@+id/btDangKyTuDangKy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#03A9F4"
                            android:text="Đăng ký"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/thanhTienTrinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="10dp"
                android:indeterminateTint="#00BFFF"
                android:visibility="gone" />

            <!-- Hình ảnh -->

            <!-- CardView cho các trường đăng ký -->
        </RelativeLayout>
    </LinearLayout>

</ScrollView>