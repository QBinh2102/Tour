<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangDangKy">

    <!-- Chỉ có một phần tử con trực tiếp duy nhất trong ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RelativeLayout chứa các phần tử trong layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome"
            android:orientation="vertical">

            <!-- Nút Quay lại -->
            <Button
                android:id="@+id/btQuayLaiTuDangKy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#03A9F4"
                android:drawableLeft="@drawable/baseline_keyboard_return_24"
                android:text="Quay Lại"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"/>

            <!-- Hình ảnh -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/person_24"
                android:layout_below="@id/btQuayLaiTuDangKy"
                android:layout_marginTop="20dp"/>

            <!-- CardView cho các trường đăng ký -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:alpha="0.9"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="32dp"
                android:layout_below="@id/imageView2"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ĐĂNG KÝ TÀI KHOẢN"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên Đăng Nhập"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/editTextUserNameDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/person_24"
                        android:ems="10"
                        android:hint="Tên Đăng Nhập"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA"
                        android:layout_marginBottom="20dp"
                        android:minHeight="48dp"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mật Khẩu"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/editTextPasswordDangKy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/lock_24"
                            android:ems="10"
                            android:hint="Mật khẩu"
                            android:inputType="textPassword"
                            android:minHeight="48dp"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA" />

                        <ImageButton
                            android:minHeight="48dp"
                            android:id="@+id/imgBtAnHienPassDangKy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            app:srcCompat="@drawable/visibility_off_24"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xác Nhận Mật Khẩu"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:minHeight="48dp"
                            android:id="@+id/editTextPasswordXacThucDangKy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/lock_24"
                            android:ems="10"
                            android:hint="Xác nhận mật khẩu"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="#96A0AA"
                            android:layout_marginBottom="10dp"/>

                        <ImageButton
                            android:minHeight="48dp"
                            android:id="@+id/imgBtAnHienXacThucPassDangKy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            app:srcCompat="@drawable/visibility_off_24"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa Chỉ"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:minHeight="48dp"
                        android:id="@+id/editTextDiaChiDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/location_on_24"
                        android:ems="10"
                        android:hint="Địa Chỉ"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số Điện Thoại"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:minHeight="48dp"
                        android:id="@+id/editTextPhoneDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/local_phone_24"
                        android:ems="10"
                        android:hint="Số điện thoại"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/editTextEmailAddressDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:ems="10"
                        android:hint="Địa chỉ mail"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/editTextNgaySinhDangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/create_24"
                        android:ems="10"
                        android:hint="Nhập ngày sinh (dd/mm/yyyy)"
                        android:padding="10dp"
                        android:inputType="textEmailAddress"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="#96A0AA"
                        android:layout_marginBottom="10dp" />


                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giới tính"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/radioGroupGT">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioNu"
                            android:checked="true"
                            android:text="Nữ"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioNam"
                            android:layout_marginLeft="20dp"
                            android:text="Nam"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"/>

                    </RadioGroup>


                    <Button
                        android:id="@+id/btDangKyTuDangKy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng ký"
                        android:textColor="@color/white"
                        android:backgroundTint="#03A9F4"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/thanhTienTrinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:elevation="10dp"
            android:indeterminateTint="#00BFFF"
            android:layout_centerInParent="true"/>
    </LinearLayout>

</ScrollView>